<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="#414141"
    tools:context="com.yagneshlp.slambook.activity.ReminderActivity">

    <android.support.v7.widget.CardView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        app:cardTitle="Test Title"
        app:cardCornerRadius="10dp"
        app:cardDescription="Test Description"
        android:elevation="8dp"
        >

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_marginTop="60sp"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"

                android:paddingRight="20dp"
                android:paddingTop="50dp"
                android:weightSum="1">


                <me.grantland.widget.AutofitTextView
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="20sp"
                    android:text="Not free Right now ?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:id="@+id/textv"
                    android:textSize="25sp"
                    />
                <me.grantland.widget.AutofitTextView
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="10sp"
                    android:text="No Problem, I've got you covered!"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:maxLines="1"
                    android:id="@+id/txtv"
                    android:textSize="15sp"
                    />

                <com.nightonke.boommenu.BoomMenuButton
                    android:id="@+id/bmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:bmb_buttonEnum="ham"
                    app:bmb_boomEnum="boomRandom"
                    android:layout_gravity="center"
                    app:bmb_use3DTransformAnimation="true"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    app:bmb_normalColor="@color/colorPrimary"
                    android:paddingBottom="10dp"
                    android:paddingTop="30dp" />
                <me.grantland.widget.AutofitTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/hint"
                    android:textSize="10sp"
                    android:text="Press the above button"
                    android:maxLines="1"/>




                <com.dd.processbutton.iml.ActionProcessButton
                    android:id="@+id/btnset"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Set Reminder"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="40dp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="0dp"
                    android:elevation="5dp"

                    custom:pb_colorNormal="@color/colorPrimary"
                    custom:pb_colorPressed="@color/colorPrimaryDark"/>

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>


</FrameLayout>
