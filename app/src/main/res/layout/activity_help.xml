<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:background="#414141"
    android:layout_height="match_parent"
    tools:context=".activity.HelpActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ak.sh.ay.oblique.ObliqueView
            android:id="@+id/obliqueView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            app:basecolor="@color/colorPrimaryDark"
            app:ending_slant_angle="0"
            app:starting_slant_angle="20" />


        <ak.sh.ay.oblique.ObliqueView
            android:id="@+id/obliqueView2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="250dp"
            android:scaleType="fitXY"
            app:basecolor="#FBB03B"
            app:ending_slant_angle="180"
            app:starting_slant_angle="150" />

        <ak.sh.ay.oblique.ObliqueView
            android:id="@+id/obliqueView1"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="270dp"
            android:scaleType="fitXY"
            app:basecolor="#D4145A"
            app:ending_slant_angle="25"
            app:starting_slant_angle="0" />


        <ak.sh.ay.oblique.ObliqueView
            android:id="@+id/obliqueView3"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            app:basecolor="#00537E"
            app:ending_slant_angle="25"
            app:starting_slant_angle="0" />

        <ak.sh.ay.oblique.ObliqueView
            android:id="@+id/obliqueView4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            app:basecolor="#009245"
            app:ending_slant_angle="180"
            app:starting_slant_angle="165" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:id="@+id/imageView4"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/title"
            android:paddingLeft="20dp"
            android:text="Slambook"
            android:textColor="#fff"
            android:textSize="65sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:text="Version 0.4.2\nFermium"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_below="@+id/title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView5" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:text="FAQ"
            android:textColor="#fff"
            android:textSize="40sp"
            android:id="@+id/textView3"
            android:onClick="faq"
            android:layout_above="@+id/sample"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/demonstrator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableTop="@drawable/ic_gesture_black_24dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="Help"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginBottom="16dp"
            android:onClick="help"
            android:layout_marginRight="27dp"
            android:layout_marginEnd="27dp"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableTop="@drawable/ic_style_black_24dp"
            android:gravity="right"
            android:paddingRight="25dp"
            android:rotation="-25"
            android:text="Documentation"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp"
            android:onClick="document"
            android:layout_above="@+id/demonstrator"
            android:layout_alignRight="@+id/demonstrator"
            android:layout_alignEnd="@+id/demonstrator"
            android:layout_marginBottom="9dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:textSize="30sp"
            android:textColor="#fff"
            android:text="Licenses"
            android:onClick="license"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrowleft"
            android:onClick="goBack"
            android:layout_marginBottom="34dp"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Copyright 2017 Yagnesh L P\n MIT License"
            android:layout_below="@+id/imageView4"
            android:layout_alignRight="@+id/sample"
            android:layout_alignEnd="@+id/sample"
            android:layout_marginRight="23dp"
            android:layout_marginEnd="23dp" />
    </RelativeLayout>


</RelativeLayout>